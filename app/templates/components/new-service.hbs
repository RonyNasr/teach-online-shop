{{#if showUpdate.updateServiceForm}}
<h1>Update {{showUpdate.service.name}} Service</h1>
<div>
  <form>
    <div class="form-group">
      <label for="name">Name</label>
      {{input value=name id="name" placeholder=showUpdate.service.name}}
    </div>

    <div class="form-group">
      <label for="price">Price</label>
      {{input value=price id="price" placeholder=showUpdate.service.price}}
    </div>

    <div class="form-group">
      <label for="photo">Photo URL</label>
      {{input value=photo id="photo" placeholder=showUpdate.service.photo}}
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      {{textarea value=description id="description" cols="50" rows="4" placeholder=showUpdate.service.description}}
    </div>
    <button class="btn btn-success" {{action 'updateService' showUpdate.service}}>update</button>
  </form>
</div>
{{else}}
<h1>Add a New Service</h1>
<div>
  <form>
    <div class="form-group">
      <label for="name">Name</label>
      {{input value=name id="name"}}
    </div>

    <div class="form-group">
      <label for="price">Price</label>
      {{input value=price id="price"}}
    </div>

    <div class="form-group">
      <label for="photo">Photo URL</label>
      {{input value=photo id="photo"}}
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      {{textarea value=description id="description" cols="50" rows="4"}}
    </div>
    <button class="btn btn-success" {{action 'saveService'}}>Save</button>
  </form>
</div>
{{/if}}
